{
  "name": "metalmouth voice browser",
  "version": "1.7.1",
  "description": "A voice browser for Chrome",
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
     "default_icon": "MetalMouthLogo.png",
     "default_title": "metalmouth voice browser"
   },
   "omnibox": { "keyword" : "mm" },
   "icons": {
    "16": "MetalMouthLogo.png",
    "48": "MetalMouthLogo.png",
    "128": "MetalMouthLogo.png"
   },
   "permissions": ["tabs", "http://*/*", "https://*/*", "tts"]
}